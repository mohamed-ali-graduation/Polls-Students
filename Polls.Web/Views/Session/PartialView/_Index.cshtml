@using Polls.Domain.ViewModel.Session
@model CreateSessionViewModel

<div class="modal fade" id="modall" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Create a new session</h5>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                ></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col mb-5">
                        <form asp-action="Create">
                            <div class="col-lg-12 mb-2">
                                <input type="hidden" id="CourseId" asp-for="CourseId"/>
                                <input type="text" id="add" class="form-control mb-2" asp-for="@Model.Title" placeholder="Title..." />
                                <select class="form-control mb-2" id="drop" asp-for="CourseId" hidden></select>
                            </div>
                            <div class="col-lg-12 mb-2">
                                <input type="hidden" asp-for="Viewbag"/>
                                <textarea class="form-control mb-2" rows="3" asp-for="Description" placeholder="Description"></textarea>
                                <select class="form-control mb-2 ins" id="insdrop" required asp-for="InstructorId"></select>
                            </div>
                            <input type="submit" class="btn btn-primary" value="Add">
                        </form>                   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
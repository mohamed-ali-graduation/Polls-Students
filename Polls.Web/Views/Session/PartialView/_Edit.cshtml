@using Polls.Domain.ViewModel.Session
@model EditSessionViewModel

@{
    string modalid = "modall" + Model.Id.ToString();
    string divid = "div" + Model.Id.ToString();
}

<div class="modal fade" id="@modalid" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Update session</h5>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                ></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col mb-5">
                        <form asp-action="Edit">
                            <input type="hidden" asp-for="Id"/>
                            <div class="col-lg-12 mb-2">
                                <input type="text" id="add" class="form-control mb-2" asp-for="@Model.Title" placeholder="Title..." />
                                <select class="form-control mb-2" required asp-for="CourseId">
                                    @foreach (var item in Model.Courses)
                                    {
                                        if(Model.CourseId == item.Id)
                                        {
                                            <option selected value="@item.Id">@item.Title</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.Title</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-lg-12 mb-2">
                                <input type="hidden" asp-for="Viewbag"/>
                                <textarea class="form-control mb-2" rows="3" asp-for="Description" placeholder="Description"></textarea>
                                <select class="form-control mb-2 ins" required asp-for="InstructorId">
                                    @foreach (var item in Model.Instructors)
                                    {
                                        <option value="@item.Id">@item.FirstName @item.LastName</option>
                                    }
                                </select>
                            </div>
                            <input type="submit" class="btn btn-primary" value="Save Change">
                        </form>                   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using Polls.Domain.ViewModel.Account
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="col-sm-12">
    <div class="col-md-6 center p-5">
        <div class="col-md-10 center p-3" id="cont">
            <h2>Login</h2>
            <hr>
            <form asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.url">
                <div class="m-3">
                    <label asp-for="UserId" class="form-label"></label>
                    <input asp-for="UserId" class="form-control" placeholder="User Name..">
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="m-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Password..">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="m-3">
                    <input asp-for="RememberMe" class="form-check-input">
                    <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
                </div>
                <div class="m-3">
                    <input type="submit" class="btn btn-success w-100" value="Login">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}